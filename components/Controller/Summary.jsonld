          "range": "xsd:string",
          "@type": "ParameterUnique"
        },
        {
          "@id": "ldfs:summaryPath",
          "comment": "Path matching for summaries",
          "range": "xsd:string",
          "@type": "ParameterUnique"
        }
      ],
      "constructorArguments": [
        {
          "@type": "Object",
          "extends": "ldfs:Controller/constructorArgumentsObject",
          "fields": [
            {
              "keyRaw": "summaries",
              "value": {
                "fields": [
                  {
                    "keyRaw": "dir",
                    "value": "ldfs:summaryDir"
                  },
                  {
                    "keyRaw": "path",
                    "value": "ldfs:summaryPath"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
