{
  "@context": "https://linkedsoftwaredependencies.org/contexts/ldf-server.jsonld",
  "@id": "urn:ldfserver:my",
  "@type": "QpfServer",

  "title": "Composite Linked Data Fragments server",

  "datasources": [
    {
      "@id": "ldfs:defaultIndexDatasource"
    },
    {
      "@id": "ex:myCompositeDatasource",
      "@type": "CompositeDatasource",
      "title": "Composite",
      "description": "An example composite datasource",
      "path": "composite",
      "compose": [ "ex:myHdt", "ex:myTtl", "ex:myJsonld", "ex:myHdtext", "ex:myTrig" ]
    },
    {
      "@id": "ex:myHdt",
      "@type": "HdtDatasource",
      "hide": true,
      "title": "HDT",
      "description": "A test HDT datasource",
      "path": "hdt",
      "hdtFile": "test/assets/test.hdt",
      "graph": "http://example.org/graph0"
    },
    {
      "@id": "ex:myTtl",
      "@type": "TurtleDatasource",
      "hide": true,
      "title": "Turtle",
      "description": "A test turtle datasource",
      "path": "turtle",
      "file": "test/assets/test.ttl",
      "graph": "http://example.org/graph1"
    },
    {
      "@id": "ex:myJsonld",
      "@type": "JsonLdDatasource",
      "hide": true,
      "title": "JSONLD",
      "description": "A test jsonld datasource",
      "path": "jsonld",
      "file": "test/assets/test.jsonld",
      "graph": "http://example.org/graph2"
    },
    {
      "@id": "ex:myHdtext",
      "@type": "HdtDatasource",
      "hide": true,
      "title": "HDT-EXT",
      "description": "A blank test HDT datasource",
      "path": "hdtext",
      "hdtFile": "test/assets/test-blank.hdt",
      "graph": "http://example.org/graph3"
    },
    {
      "@id": "ex:myTrig",
      "@type": "TrigDatasource",
      "hide": true,
      "title": "Trig",
      "description": "A test Trig datasource",
      "path": "trig",
      "file": "test/assets/test.trig"
    }
  ]
}
